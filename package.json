    "socket.io": "^2.5.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.106",
    "@types/node": "^9.6.0",
    "@types/socket.io": "^1.4.33",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.1",
    "prettier": "1.11.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "2.7.2"
